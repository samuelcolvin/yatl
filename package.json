{
  "name": "yatl",
  "version": "0.0.1",
  "description": "Yet Another Template Language",
  "main": "index.js",
  "files": [
    "lib/**/*"
  ],
  "author": "Samuel Colvin",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "test": "jest --config jestconfig.json --verbose",
    "experiment": "ts-node --project tsconfig.json ./src/index.ts",
    "format": "prettier --write '*.json' 'src/**/*.{js,ts}' 'tests/**/*.{js,ts}'",
    "lint": "eslint --max-warnings=0 src && prettier --check '*.json' 'src/**/*.{js,ts}' 'tests/**/*.{js,ts}'"
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "/lib/**/*"
    ],
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "globals": {
      "enz": true,
      "xhr_calls": true
    },
    "extends": [
      "typescript",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "no-constant-condition": "off"
    }
  },
  "dependencies": {
    "esprima": "^4.0.1",
    "jest-each": "^26.6.2",
    "saxes": "^5.0.1"
  },
  "devDependencies": {
    "@types/dom-parser": "^0.1.1",
    "@types/esprima": "^4.0.2",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-typescript": "^3.0.0",
    "jasmine": "^3.7.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  }
}
