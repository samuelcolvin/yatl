{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext", "webworker"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "types": ["@types/esprima", "@types/jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "tests"]
}
