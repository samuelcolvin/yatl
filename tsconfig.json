{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "es2015",
    "target": "esnext",
    "lib": ["esnext", "webworker"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["@types/esprima", "@types/jasmine", "@types/dom-parser"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "**/__tests__/*"]
}
